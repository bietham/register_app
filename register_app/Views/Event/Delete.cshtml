@model register_app.ViewModels.EventDeleteViewModel
@{
    ViewData["Title"] = "Deleting "+Model.Name;
}

<h1>Are you sure you want to delete @Model.Name?</h1>

<form asp-action="Delete" asp-controller="Event" method="POST">
    <input type="hidden" asp-for="Id" />

    <div class="list-group">
        <div class="list-group-item d-flex justify-content-between">
            <div class="font-weight-bold">@Model.Name</div>
        </div>
    </div>

    <hr>
    <div class="flex-lg-row">
        <a asp-controller="Event" asp-action="Index" class="btn btn-secondary">< Back</a>
        <button class="btn btn-danger" type="submit">Delete Event</button>
    </div>
</form>