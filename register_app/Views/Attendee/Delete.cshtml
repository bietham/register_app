@model register_app.ViewModels.AttendeeDeleteViewModel

<h1>Are you sure you want to delete this person?</h1>
<form asp-action="Delete" asp-controller="Attendee" method="POST">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="EventId" />

    <div class="list-group">
        <div class="list-group-item d-flex justify-content-between">
            <div class="font-weight-bold">@Model.Name</div>
        </div>
    </div>

    <hr>
    <div class="flex-lg-row">
        <a asp-controller="Event" asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-secondary">< Back</a>
        <button class="btn btn-danger" type="submit">Delete Message</button>
    </div>
</form>